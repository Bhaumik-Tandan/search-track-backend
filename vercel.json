{
    "version": 2,
    "builds": [
      {
        "src": "src/app.ts",
        "use": "@now/node-builder",
        "config": {
          "src": "src/**/*.ts",
          "tsconfig": "tsconfig.json"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/src/app.ts"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": ".*",
        "status": 404,
        "dest": "/404.html"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }
  